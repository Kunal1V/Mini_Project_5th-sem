<% layout('layout/boilerplate') -%>;
<form action="/students/<%=student._id%>?_method=PATCH" method="post" >
    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" name="name" id="name" class="form-control" value="<%=student.name%>">

    </div>
    <div class="mb-3">
        <label for="img" class="form-label">Profile</label>
        <input type="text" name="img" id="img" class="form-control" value="<%=student.img%>">
    </div>
    <div class="mb-3">
        <label for="address" class="form-label">Address</label>
        <input type="text" name="address" id="name" class="form-control" value="<%=student.address%>">

    </div>
    <div class="mb-3">
        <label for="course" class="form-label">Course</label>
        <input type="text" name="course" id="name" class="form-control" value="<%=student.course%>">

    </div>
    <div class="mb-3">
        <label for="branch" class="form-label">Branch</label>
        <input type="text" name="branch" id="name" class="form-control" value="<%=student.branch%>">

    </div>
    <div class="mb-3">
        <label for="year" class="form-label">Year</label>
        <input type="number" name="year" id="name" class="form-control" value="<%=student.year%>">

    </div>
    <div class="mb-3">
        <label for="core_skills" class="form-label">Core Skills</label>
        <input type="text" name="core_skills" id="name" class="form-control" value="<%=student.core_skills%>">

    </div>
    <div class="mb-3">
        <label for="coding_link" class="form-label">Coding platform(e.g. Leetcode,Codeforces link)</label>
        <input type="text" name="coding_link" id="name" class="form-control" value="<%=student.coding_link%>">

    </div>
    <div class="mb-3">
        <label for="certifications" class="form-label">Certifications</label>
        <input type="text" name="certifications" id="name" class="form-control" value="<%=student.certifications%>">

    </div>
    <div class="mb-3">
        <label for="cpi" class="form-label">CPI</label>
        <div class="input-group mb-3">
            <!-- <span class="input-group-text">$</span> -->
            <input type="number" class="form-control" name="cpi" aria-label="Amount (to the nearest dollar)" value="<%=student.cpi%>">
            <!-- <span class="input-group-text">.00</span> -->
        </div>
    </div>
    
    <button type="submit" class="btn btn-success">Edit Details</button>
</form>